<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/colorPrimaryDark">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:src="@drawable/orientation_logo" />


                    <TextView
                        android:id="@+id/tv"
                        android:layout_below="@id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:text="An app created with \u2764 to help our freshies"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_below="@id/tv">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Follow us:"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="4dp"
                            android:clickable="true"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:id="@+id/view_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFF"
                                android:paddingTop="10dp">
                                <ImageView
                                    android:id="@+id/delete_icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:paddingLeft="20dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/facebook" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:padding="5dp"
                                    android:layout_toRightOf="@id/delete_icon"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/track_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Like us on Facebook"
                                        android:textSize="20dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/artist_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="To stay tuned to latest updates"
                                        android:textSize="10dp" />


                                </LinearLayout>


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Think something's wrong or something can be improved?"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="4dp"
                            android:clickable="true"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:id="@+id/view_backgroundEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFF"
                                android:paddingTop="10dp">
                                <ImageView
                                    android:id="@+id/emailIcon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:paddingLeft="20dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/email" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:padding="5dp"
                                    android:layout_toRightOf="@id/emailIcon"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Drop us an E-Mail"
                                        android:textSize="20dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Letting us know what's bothering you"
                                        android:textSize="10dp" />


                                </LinearLayout>


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Are you a Geek? ðŸ˜‰"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="4dp"
                            android:clickable="true"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:id="@+id/view_backgroundgeek"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFF"
                                android:paddingTop="10dp">
                                <ImageView
                                    android:id="@+id/geekIcon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:paddingLeft="20dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/geek" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:padding="5dp"
                                    android:layout_toRightOf="@id/geekIcon"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pandora's Box"
                                        android:textSize="20dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tap to Open "
                                        android:textSize="10dp" />


                                </LinearLayout>


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>



            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/nittLogo"
                android:layout_height="wrap_content"
                android:scaleX="0.3"
                android:layout_marginBottom="-30dp"
                android:layout_alignParentBottom="true"
                android:scaleY="0.3"
                android:src="@drawable/nitt" />



        </RelativeLayout>





</android.support.constraint.ConstraintLayout>